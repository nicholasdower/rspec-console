#!/usr/bin/env ruby

require 'rspec-interactive'

if ARGV.size == 0
  RSpec::Interactive.start
elsif ARGV.size == 1
  RSpec::Interactive.start(config_file: ARGV[0])
else
  STDERR.puts "expected 0 or 1 argument, got: #{args.join(', ')}"
  STDERR.puts ''
  STDOUT.puts 'usage: rspec-interactive [config-file]'
  exit 1
end
